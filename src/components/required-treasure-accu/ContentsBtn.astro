---
import type { HTMLAttributes } from 'astro/types';
import { Image } from 'astro:assets';
import { css } from 'styled-system/css';

interface Props extends HTMLAttributes<'div'> {}
const { class: className } = Astro.props;
---

<div
  class:list={[
    className,
    css({
      pos: 'relative'
    })
  ]}>
  <button
    type="button"
    class={css({ filter: 'drop-shadow(2px 2px 4px #000)' })}>
    <!-- <ContentsLabel /> -->
  </button>
  <button
    type="button"
    class={css({
      d: 'inline-grid',
      placeItems: 'center',
      bgColor: '{colors.gray}',
      radius: '100px',
      pd: '.125rem',
      boxShadow: '1px 1px 4px #000',
      pos: 'absolute',
      top: '-0.375rem',
      left: '-0.375rem',
      zIndex: 5
    })}>
    <Image
      class={css({ w: '2rem' })}
      src="/images/icon/ui/setting.svg"
      width={80}
      height={80}
      alt="設定アイコン"
    />
  </button>
</div>
